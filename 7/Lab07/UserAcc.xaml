<UserControl x:Class="Lab07.UserAcc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab07"
             mc:Ignorable="d" Height="160" Width="120" Background="#FF212121">
    <UserControl.CommandBindings>
        <CommandBinding Command="local:CustomCommand.NewCommand" Executed="CommandBinding_Executed"/>
    </UserControl.CommandBindings>
    <Grid Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
		<Button Background="Transparent" Grid.Row="1" Width="100" Height="100" Command="local:CustomCommand.NewCommand" Margin="5">
            <Image Grid.Row="1" x:Name="UserImage" Width="100" Height="100"/>
        </Button>
        <StackPanel Grid.Column="1">
			<TextBlock x:Name="UserName" Text="Имя котика" Foreground="Black" FontFamily="Century Gothic" FontSize="16" Margin="5"/>
		</StackPanel>
    </Grid>
</UserControl>
